    <Grid ColumnDefinitions="200 0 *">
        <ScrollViewer Grid.Column="0">
            <TreeView ItemsSource="{Binding Directories}">
                <TreeView.ItemTemplate>
                    <TreeDataTemplate ItemsSource="{Binding Children}">
                        <TextBlock Text="{Binding Name}" />
                    </TreeDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
        </ScrollViewer>

        <Border Grid.Column="1" Width="3" Margin="5" Background="Gray"
                CornerRadius="50" Opacity="0.45" />

        <Panel Grid.Column="2">
            <ScrollViewer>
                <WrapPanel>
                    <ItemsControl ItemsSource="{Binding Files}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="Gray" CornerRadius="5"
                                        Margin="10" Width="100" Height="100"
                                        PointerPressed="ItemClick">
                                    <Border.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Open">
                                                <MenuItem.Icon>
                                                    <PathIcon Data="{StaticResource open_regular}"></PathIcon>
                                                </MenuItem.Icon>
                                            </MenuItem>
                                            <MenuItem Header="New">
                                                <MenuItem.Icon>
                                                    <PathIcon Data="{StaticResource add_regular}"></PathIcon>
                                                </MenuItem.Icon>

                                                <MenuItem Header="Level" />
                                            </MenuItem>
                                            <Separator />
                                            <MenuItem Header="Delete">
                                                <MenuItem.Icon>
                                                    <PathIcon Data="{StaticResource delete_regular}"></PathIcon>
                                                </MenuItem.Icon>
                                            </MenuItem>
                                            <MenuItem Header="Copy">
                                                <MenuItem.Icon>
                                                    <PathIcon Data="{StaticResource copy_regular}"></PathIcon>
                                                </MenuItem.Icon>
                                            </MenuItem>
                                            <MenuItem Header="Paste" IsEnabled="False">
                                                <MenuItem.Icon>
                                                    <PathIcon Data="{StaticResource clipboard_paste_regular}"></PathIcon>
                                                </MenuItem.Icon>
                                            </MenuItem>
                                        </ContextMenu>
                                    </Border.ContextMenu>
                                    <TextBlock Foreground="White" Margin="5"
                                               VerticalAlignment="Bottom" Text="{Binding Name}" />
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </WrapPanel>
            </ScrollViewer>
        </Panel>
    </Grid>
</UserControl>