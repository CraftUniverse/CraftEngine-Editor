<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" Width="600" Height="800"
        x:Class="dev.craftengine.editor.Views.Preferences">
    <StackPanel Orientation="Horizontal" Margin="5">

        <ScrollViewer AllowAutoHide="False" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Orientation="Vertical">
                <TextBlock Margin="5" FontWeight="Bold">General</TextBlock>

                <ListBox Name="SidebarGeneral" CornerRadius="5"
                         SelectionChanged="SidebarGeneral_OnSelectionChanged">
                    <ListBoxItem Name="SidebarGeneralExternal" CornerRadius="5"
                                 Padding="8">
                        External Tools
                    </ListBoxItem>
                    <ListBoxItem Name="SidebarGeneralExternal_2" CornerRadius="5"
                                 Padding="8">
                        External Tools 2
                    </ListBoxItem>
                </ListBox>
            </StackPanel>
        </ScrollViewer>

        <Border Width="3" Margin="5" Background="Gray" CornerRadius="50" />

        <StackPanel Orientation="Vertical">
            <Panel IsEnabled="False" Name="PanelGeneralExternal">
                <TextBlock>External Tools</TextBlock>
            </Panel>
            <Panel IsEnabled="False" Name="PanelGeneralExternal_2">
                <TextBlock>External Tools 222222</TextBlock>
            </Panel>
        </StackPanel>
    </StackPanel>
</Window>