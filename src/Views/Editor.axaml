<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="720" Width="1280"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        x:Class="dev.craftengine.editor.Views.Editor"
        Icon="/Assets/icon.ico">
    <DockPanel Name="MainPanel">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Save Level" />
                <MenuItem Header="_Save Level as..." />
                <Separator />
                <MenuItem Click="Menu_File_Exit_OnClick" Header="_Exit" />
            </MenuItem>

            <MenuItem Header="_Edit">
                <MenuItem Header="_Undo" />
                <MenuItem Header="_Redo" />
                <MenuItem Header="_Preferences" />
            </MenuItem>

            <MenuItem Header="_Objects">
                <MenuItem></MenuItem>
            </MenuItem>

            <MenuItem Header="_Windows">
                <MenuItem Header="_Game Viewer" ToggleType="CheckBox" IsChecked="True" />
                <MenuItem Header="_Properties" ToggleType="CheckBox" IsChecked="True" />
                <MenuItem Header="_Hierarchy" ToggleType="CheckBox" IsChecked="True" />
                <MenuItem Header="_Asset Browser" ToggleType="CheckBox" IsChecked="True" />
                <MenuItem Header="_Console" ToggleType="CheckBox" IsChecked="True" />
            </MenuItem>
        </Menu>

        <TextBlock />
    </DockPanel>
</Window>