<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="dev.craftengine.editor.App"
             xmlns:sukiUi="clr-namespace:SukiUI;assembly=SukiUI"
             RequestedThemeVariant="Default">

    <Application.Styles>
        <sukiUi:SukiTheme>
            <sukiUi:SukiTheme.ThemeColor>Blue</sukiUi:SukiTheme.ThemeColor>
        </sukiUi:SukiTheme>

        <StyleInclude Source="avares://AsyncImageLoader.Avalonia/AdvancedImage.axaml" />
        <StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Fluent.xaml" />
        <StyleInclude Source="avares://Avalonia.Controls.ColorPicker/Themes/Fluent/Fluent.xaml" />
    </Application.Styles>

    <Application.Resources>
        <SolidColorBrush x:Key="BreadcrumbBarNormalForegroundBrush" Color="White" />
        <SolidColorBrush x:Key="BreadcrumbBarFocusForegroundBrush" Color="White" />
        <SolidColorBrush x:Key="BreadcrumbBarCurrentNormalForegroundBrush" Color="White" />
        <SolidColorBrush x:Key="BreadcrumbBarCurrentFocusForegroundBrush" Color="White" />
        <SolidColorBrush x:Key="BreadcrumbBarForegroundBrush" Color="White" />

        <StaticResource x:Key="BreadcrumbBarHoverForegroundBrush" ResourceKey="SystemAccentColor" />
        <StaticResource x:Key="BreadcrumbBarPressedForegroundBrush" ResourceKey="SystemAccentColorDark3"></StaticResource>
    </Application.Resources>
</Application>